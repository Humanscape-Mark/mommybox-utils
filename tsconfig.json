{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "module": "esnext",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "outDir": ".build",
    "rootDir": "./",
    "esModuleInterop": true
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.json"
, "temp.js", "index.js"  ],
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    ".archived"
  ]
}